<div class="container-fluid">

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>{{product.category}}’s Package</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Home</a>
                            <a href="/get-category-products?id={{product.category}}">{{product.category}}</a>
                            <span>{{product.category}}’s Package</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">

                <div class="col-lg-5 col-md-4 p-5">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item mb-5" id="img-container"
                            style="width: 350; height:300px;">
                            <img class="product__details__pic__item--large" src="/product-images/{{images.[1]}}" alt="">
                        </div>

                        <div class="product__details__pic__slider owl-carousel py-5">
                            {{#each images}}
                            <img data-imgbigurl="/product-images/{{this}}" src="/product-images/{{this}}" alt="">
                            {{/each}}
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3>{{product.productName}}</h3>
                        <div class="product__details__rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-half-o"></i>
                            <span>(18 reviews)</span>
                        </div>
                        <div class="product__details__price">₹{{product.OurPrice}}.00</div>
                        <p>{{product.description}}</p>
                        {{!-- <div class="product__details__quantity">
                            <div class="quantity">
                                <div class="pro-qty">
