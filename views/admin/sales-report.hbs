<div class="container">
    <!-- Hoverable Table rows -->
    <div class="mt-5 card">
        <span>
            <h4 class="card-header m-3">Sales Report</h4>
        </span>
        <hr>
        {{#if err}}
        <div class="alert alert-danger" role="alert">{{err}}</div>

        {{/if}}
        <div class="row my-4">

            <div class="col d-flex">
                <a onclick='return demoFromHTML()' class="button btn btn-outline-success me-3 ms-auto">Export as Pdf</a>
                <button class="btn btn-outline-danger me-3" onclick="ExportToExcel('xlsx')">Export table to
                    excel</button>
            </div>
        </div>

        <div class="table-responsive text-nowrap" id="customerff">
            <table id="tbl_exporttable_to_xls" class="table table-hover display nowrap">
                <thead>
                    <tr>
                        <th class="no_export">No</th>
                        <th>Name Of The Product</th>
                        <th>Quantity Sold</th>
                        <th>Revenue</th>

                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    {{#each rep}}
                    <tr>
                        <td></td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>{{this.prod}}</strong>
                        </td>
                        <td>{{this.totalquantity}}</td>

                        <td>{{this.total}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <h4 class="card-header text-danger">Total:{{totalprofit}}</h4>

        </div>


    </div>
    <!--/ Hoverable Table rows -->
    <div class="mt-5 card">
        <span>
            <h4 class="card-header m-3">Sales Report Monthly</h4>
        </span>
        <hr>
        {{#if err}}
        <div class="alert alert-danger" role="alert">{{err}}</div>

        {{/if}}


        <div class="table-responsive text-nowrap" id="customermonthly">
            <table id="tbl_exporttable_to_xls" class="table table-hover display nowrap">
                <thead>
                    <tr>
                        <th class="no_export">No</th>
                        <th>Name Of The Product</th>
                        <th>Quantity Sold</th>
                        <th>Revenue</th>

                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    {{#each rep}}
                    <tr>
                        <td></td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong>{{this.prod}}</strong>
                        </td>
                        <td>{{this.totalquantity}}</td>

                        <td>{{this.total}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>


    </div>
</div>